{
  "name": "@mochify/mochify",
  "version": "0.2.2",
  "description": "Run mocha tests in headless browsers",
  "homepage": "https://github.com/mantoni/mochify.js",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "types": "tsc",
    "test": "mocha '**/*.test.js'",
    "test:integration": "mocha --timeout 10000 -R spec '**/*.integration.js'",
    "watch": "npm test -- --watch",
    "prettier:check": "prettier --check '**/*.{js,json,md}'",
    "build": "tsc --project tsconfig.pack.json",
    "clean": "rimraf --glob '!(node_modules)/**/*.d.ts' '*.d.ts'",
    "prepack": "npm run build",
    "postpack": "npm run clean",
    "preversion": "npm run lint && npm run prettier:check && tsc && npm test && npm run test:integration",
    "version": "changes --commits --footer --workspace",
    "postversion": "npm publish"
  },
  "keywords": [
    "mocha",
    "headless",
    "browser",
    "testing"
  ],
  "author": "Maximilian Antoni <mail@maxantoni.de> (http://maxantoni.de)",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "mocha": {
    "reporter": "dot",
    "require": "../test/hooks.js",
    "ignore": "node_modules/**"
  },
  "dependencies": {
    "convert-source-map": "^1.1.3",
    "deepmerge": "^4.2.2",
    "execa": "^5.1.1",
    "glob": "^7.1.7",
    "lilconfig": "^3.0.0",
    "mime": "^2.5.2",
    "mocha": "^10.2.0",
    "source-map": "^0.5.7",
    "string-argv": "^0.3.1"
  },
  "devDependencies": {
    "@sinonjs/referee-sinon": "^11.0.0",
    "proxyquire": "^2.1.3"
  },
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "!**/*.test.js",
    "!test/**",
    "!.*"
  ]
}
